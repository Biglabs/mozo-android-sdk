<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@android:id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:lines="1"
        android:paddingStart="@dimen/mozo_screen_margin"
        android:paddingEnd="@dimen/mozo_screen_margin"
        android:text="@string/mozo_transfer_contact_not_found"
        android:textColor="@color/mozo_color_title"
        app:autoSizeMaxTextSize="@dimen/mozo_text_size"
        app:autoSizeMinTextSize="5dp"
        app:autoSizeTextType="uniform"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@android:id/extractArea"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/mozo_screen_margin"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="@dimen/mozo_screen_margin"
        android:background="@color/mozo_color_line"
        app:layout_constraintTop_toBottomOf="@android:id/text1" />

    <TextView
        android:id="@+id/button_find"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:padding="@dimen/mozo_screen_margin"
        android:paddingStart="@dimen/mozo_screen_margin"
        android:paddingEnd="@dimen/mozo_screen_margin"
        android:text="@string/mozo_transfer_contact_find_in_system"
        android:textColor="@color/mozo_color_primary"
        app:layout_constraintTop_toBottomOf="@android:id/extractArea" />
</androidx.constraintlayout.widget.ConstraintLayout>