                app:layout_constraintBaseline_toBaselineOf="@id/reset_pin_seed_5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/reset_pin_seed_5"
                tools:ignore="UnusedAttribute" />

