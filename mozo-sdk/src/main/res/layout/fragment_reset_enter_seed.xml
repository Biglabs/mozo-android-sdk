                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:labelFor="@id/reset_pin_seed_1"
                android:text="1."
                app:layout_constraintBaseline_toBaselineOf="@id/reset_pin_seed_1"
                app:layout_constraintStart_toStartOf="@id/reset_pin_seed_1"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/reset_pin_seed_2"
                style="@style/MozoTextViewStyle.Seed"
                android:importantForAutofill="no"
                android:nextFocusForward="@id/reset_pin_seed_3"
                app:layout_constraintEnd_toStartOf="@id/reset_pin_seed_8"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/reset_pin_seed_1"
                tools:ignore="UnusedAttribute"
                tools:text="Mom2" />

            <TextView
                style="@style/MozoTextViewStyle.SeedIndex"
