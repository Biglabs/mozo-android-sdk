<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="PinEntryEditText">
        <attr name="pinAnimationType" format="enum">
            <enum name="popIn" value="0" />
            <enum name="fromBottom" value="1" />
            <enum name="none" value="-1" />
        </attr>
        <attr name="pinCharacterMask" format="string" />
        <attr name="pinRepeatedHint" format="string" />
        <attr name="pinLineStroke" format="dimension" />
        <attr name="pinLineStrokeSelected" format="dimension" />
        <attr name="pinCharacterSpacing" format="dimension" />
        <attr name="pinTextBottomPadding" format="dimension" />
        <attr name="pinLineColors" format="color" />
        <attr name="pinBackgroundDrawable" format="reference" />
        <attr name="pinBackgroundIsSquare" format="boolean" />
    </declare-styleable>

    <declare-styleable name="MozoToolbar">
        <attr name="title" format="string" />
        <attr name="buttonBack" format="boolean" />
        <attr name="buttonClose" format="boolean" />
    </declare-styleable>

    <declare-styleable name="WalletInfoView">
        <attr name="viewMode" format="enum">
            <enum name="addressAndBalance" value="0" />
            <enum name="onlyAddress" value="1" />
            <enum name="onlyBalance" value="2" />
        </attr>
        <attr name="showCopyButton" format="boolean" />
        <attr name="showQRCodeButton" format="boolean" />
        <attr name="showQRCodeThumbnail" format="boolean" />
    </declare-styleable>

    <declare-styleable name="FastScrollRecyclerView">
        <attr name="setIndexTextSize" format="integer" />
        <attr name="setIndexBarWidth" format="dimension" />
        <attr name="setIndexBarMargin" format="dimension" />

        <attr name="setPreviewPadding" format="dimension" />
        <attr name="setPreviewTextSize" format="integer" />
        <attr name="setPreviewColor" format="color" />
        <attr name="setPreviewTextColor" format="color" />
        <attr name="setPreviewTransparentValue" format="float" />
        <attr name="setIndexBarCornerRadius" format="integer" />
        <attr name="setIndexBarTransparentValue" format="float" />
        <attr name="setIndexBarColor" format="color" />
        <attr name="setIndexBarTextColor" format="color" />
        <attr name="setIndexBarHighlightTextColor" format="string" />
        <attr name="setIndexBarHighlightTextColorRes" format="color" />
    </declare-styleable>
</resources>