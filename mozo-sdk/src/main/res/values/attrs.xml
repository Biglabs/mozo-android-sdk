<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="PinEntryEditText">
        <attr name="pinAnimationType" format="enum">
            <enum name="popIn" value="0" />
            <enum name="fromBottom" value="1" />
            <enum name="none" value="-1" />
        </attr>
        <attr name="pinCharacterMask" format="string" />
        <attr name="pinRepeatedHint" format="string" />
        <attr name="pinLineStroke" format="dimension" />
        <attr name="pinLineStrokeSelected" format="dimension" />
        <attr name="pinCharacterSpacing" format="dimension" />
        <attr name="pinTextBottomPadding" format="dimension" />
        <attr name="pinLineColors" format="color" />
        <attr name="pinBackgroundDrawable" format="reference" />
        <attr name="pinBackgroundIsSquare" format="boolean" />
    </declare-styleable>

    <declare-styleable name="MozoToolbar">
        <attr name="title" format="reference|string" />
        <attr name="buttonBack" format="boolean" />
        <attr name="buttonClose" format="boolean" />
        <attr name="buttonCloseText" format="reference|string" />
    </declare-styleable>

    <declare-styleable name="MozoRecyclerView">
        <attr name="lettersBarEnable" format="boolean" />
        <attr name="lettersBarWidth" format="dimension" />
        <attr name="lettersBarMarginTop" format="dimension" />
        <attr name="lettersBarTextSize" format="dimension" />
        <attr name="lettersBarTextColor" format="color" />
        <attr name="lettersBarTextLineHeight" format="dimension" />
    </declare-styleable>

    <declare-styleable name="MozoIconTextView">
        <attr name="drawableSize" format="dimension" />
    </declare-styleable>

    <declare-styleable name="MozoPlaceHolderView">
        <attr name="holder_icon" format="reference" />
        <attr name="holder_iconSize" format="dimension" />
        <attr name="holder_title" format="reference|string" />
        <attr name="holder_titleColor" format="color" />
        <attr name="holder_content" format="reference|string" />
        <attr name="holder_contentColor" format="color" />
        <attr name="holder_primaryButtonEnable" format="boolean" />
        <attr name="holder_primaryButtonText" format="reference|string" />
        <attr name="holder_primaryButtonVisible" format="boolean" />
        <attr name="holder_secondButtonEnable" format="boolean" />
        <attr name="holder_secondButtonText" format="reference|string" />
        <attr name="holder_secondButtonVisible" format="boolean" />
    </declare-styleable>

    <declare-styleable name="MozoWalletView">
        <attr name="viewMode" format="enum">
            <enum name="all" value="0" />
            <enum name="onlyAddress" value="1" />
            <enum name="onlyBalance" value="2" />
        </attr>
        <attr name="showQRCode" format="boolean" />
    </declare-styleable>

    <declare-styleable name="MozoWalletFragment">
        <attr name="buttonPaymentRequest" format="boolean" />
        <attr name="buttonSend" format="boolean" />
    </declare-styleable>
</resources>