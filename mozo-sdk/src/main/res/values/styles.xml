<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="MozoTheme" parent="@style/Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:colorAccent">@color/mozo_color_primary</item>
        <item name="android:colorPrimary">@color/mozo_color_primary</item>
        <item name="android:colorPrimaryDark">@color/mozo_color_primary</item>

        <item name="popupMenuStyle">@style/MozoPopup</item>
        <item name="materialButtonStyle">@style/MozoButtonStyle</item>
        <item name="android:buttonStyle">@style/MozoButtonStyle</item>
        <item name="android:backgroundDimAmount">@dimen/mozo_background_dim_amount</item>
        <item name="android:popupMenuStyle">@style/MozoPopup</item>
        <item name="android:textViewStyle">@style/MozoTextViewStyle</item>
        <item name="android:textColor">@color/mozo_color_text_main</item>
        <item name="android:textSize">@dimen/mozo_text_size</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="MozoTheme.Transparent">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="MozoTheme.Transparent.Dim">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowActivityTransitions">false</item>
    </style>

    <style name="MozoTheme.SubTitle">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/mozo_color_primary</item>
        <item name="android:textSize">@dimen/mozo_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MozoTheme.SeedWords">
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/mozo_color_primary</item>
        <item name="android:textSize">@dimen/mozo_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--widget styles-->
    <style name="MozoButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="enforceMaterialTheme">false</item>
        <item name="enforceTextAppearance">false</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:background">@drawable/mozo_dr_btn</item>
        <item name="android:backgroundTint">@color/mozo_selector_btn_color</item>
        <item name="backgroundTint">@color/mozo_selector_btn_color</item>
        <item name="cornerRadius">@dimen/mozo_dialog_corner_radius</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/mozo_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">@null</item>
    </style>

    <style name="MozoButtonStyle.Rounded">
        <item name="android:background">@drawable/mozo_dr_btn_rounded</item>
        <item name="android:backgroundTint">@color/mozo_selector_btn_color</item>
        <item name="backgroundTint">@color/mozo_selector_btn_color</item>
        <item name="cornerRadius">@dimen/mozo_btn_rounded_radius</item>
        <item name="android:minWidth">143dp</item>
    </style>

    <style name="MozoButtonStyle.Floating">
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginBottom">28dp</item>
    </style>

    <style name="MozoPopup" parent="Widget.AppCompat.PopupMenu">
        <item name="android:textColor">@color/mozo_color_text_main</item>
        <item name="android:itemBackground">@drawable/mozo_bg_component</item>
        <item name="android:backgroundDimAmount">@dimen/mozo_background_dim_amount</item>
    </style>

    <style name="MozoWalletInfoButton">
        <item name="android:layout_height">45dp</item>
        <item name="android:background">@drawable/mozo_bg_border_primary</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:gravity">center</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="MozoWalletInfoButtonText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/mozo_color_primary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="MozoTextViewStyle" parent="Base.TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/mozo_text_size</item>
        <item name="android:textColor">@color/mozo_color_content</item>
    </style>

    <style name="MozoTextViewStyle.Seed">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginStart">9dp</item>
        <item name="android:layout_marginEnd">9dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:background">@drawable/mozo_dr_input_seed_underline</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:inputType">text</item>
        <item name="android:digits">qwertyuiopasdfghjklzxcvbnm</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLength">12</item>
        <item name="android:singleLine">true</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/mozo_color_seed_input</item>
        <item name="layout_constraintHorizontal_chainStyle">packed</item>
        <item name="layout_constraintWidth_percent">0.38</item>
    </style>

    <style name="MozoTextViewStyle.SeedIndex">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/mozo_color_line</item>
    </style>

    <style name="MozoTabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/mozo_text_size</item>
    </style>
</resources>