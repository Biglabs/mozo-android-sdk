<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape>
            <solid android:color="@color/mozo_color_primary" />
            <corners android:bottomRightRadius="@dimen/mozo_btn_corner_radius" android:topRightRadius="@dimen/mozo_btn_corner_radius" />
        </shape>
    </item>
    <item android:state_checked="false">
        <shape>
            <stroke android:width="1dp" android:color="@color/mozo_color_primary" />
            <corners android:bottomRightRadius="@dimen/mozo_btn_corner_radius" android:topRightRadius="@dimen/mozo_btn_corner_radius" />
        </shape>
    </item>
</selector>