<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape>
            <stroke android:width="2dp" android:color="@color/mozo_color_primary" />
            <padding android:bottom="12dp" android:left="15dp" android:right="15dp" android:top="12dp" />
        </shape>
    </item>

    <item android:state_focused="false">
        <shape>
            <stroke android:width="1dp" android:color="@color/mozo_color_un_active" />
            <padding android:bottom="12dp" android:left="15dp" android:right="15dp" android:top="12dp" />
        </shape>
    </item>
</selector>